@model ProjectManager.ViewModels.TaskProjectStatusViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Task.Project.ProjectCode" class="control-label"></label>
                <select asp-for="Task.Project.ProjectCode" asp-items="@(new SelectList(Model.Projects, "ProjectCode", "ProjectName"))" class="form-control"></select>
                <span asp-validation-for="Task.Project.ProjectCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Status.Name" class="control-label"></label>
                <select asp-for="Task.Status.Name" asp-items="@(new SelectList(Model.Statuses))" class="form-control"></select>
                <span asp-validation-for="Task.Status.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Deadline" class="control-label"></label>
                <input asp-for="Task.Deadline" class="form-control" />
                <span asp-validation-for="Task.Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Description" class="control-label"></label>
                <input asp-for="Task.Description" class="form-control" />
                <span asp-validation-for="Task.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Progress" class="control-label"></label>
                <input asp-for="Task.Progress" class="form-control" />
                <span asp-validation-for="Task.Progress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Assignee.Id" class="control-label">Assignee</label>
                <select asp-for="Task.Assignee.Id" asp-items="@(new SelectList(ViewBag.Users, "Id", "UserName"))" class="form-control">
                    <option disabled selected>--- SELECT ---</option>
                </select>
                <span asp-validation-for="Task.Assignee.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
