@model ManageUserRolesViewModel
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User / @ViewBag.UserName
        </div>
        <div class="card-body">

            <div class="form-group">
            <label asp-for="RoleName" class="control-label">Assignee</label>
            <select asp-for="RoleName" asp-items="@(new SelectList(ViewBag.Roles, "RoleName", "RoleName"))" class="form-control"></select>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="Index" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>