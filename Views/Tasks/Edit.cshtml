@model ProjectManager.ViewModels.TaskProjectStatusUserViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<p>@ViewData["NotEditedMessage"]</p>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Task.TaskId" />
            <div class="form-group">
                <label asp-for="Task.Status.Name" class="control-label">Status</label>
                <select asp-for="Task.Status.Name" class="form-control">
                    @foreach (var item in Model.Statuses)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="Task.Status.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Deadline" class="control-label"></label>
                @if (User.IsInRole("Developer"))
                {
                    <input readonly asp-for="Task.Deadline" class="form-control" />
                }
                else
                {
                    <input asp-for="Task.Deadline" class="form-control" />
                }
                <span asp-validation-for="Task.Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Description" class="control-label"></label>
                <input asp-for="Task.Description" class="form-control" />
                <span asp-validation-for="Task.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Progress" class="control-label"></label>
                <input asp-for="Task.Progress" class="form-control" />
                <span asp-validation-for="Task.Progress" class="text-danger"></span>
            </div>
            @if (!User.IsInRole("Developer"))
            {
        <div class="form-group">
            <label asp-for="Task.Assignee.Id" class="control-label">Assignee</label>
            <select asp-for="Task.Assignee.Id" asp-items="@(new SelectList(Model.Users, "Id", "UserName"))" class="form-control">
                <option value="" selected>--- UNASSIGN ---</option>
            </select>
            <span asp-validation-for="Task.Assignee.Id" class="text-danger"></span>
        </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
